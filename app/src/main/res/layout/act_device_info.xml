<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备配置"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.sunny.lib.view.SunnyView
        android:id="@+id/base_line"
        android:layout_width="50dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <!-- sn info -->
    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_android_sdk_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="android SDK 版本"
        app:layout_constraintRight_toLeftOf="@id/base_line"
        app:layout_constraintTop_toBottomOf="@id/base_line" />

    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_android_sdk_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/base_line"
        app:layout_constraintTop_toTopOf="@id/tv_android_sdk_key" />


    <!-- sn info -->
    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_sn_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="设备序列号SN"
        app:layout_constraintRight_toLeftOf="@id/base_line"
        app:layout_constraintTop_toBottomOf="@id/tv_android_sdk_key" />

    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_sn_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxx"
        app:layout_constraintLeft_toRightOf="@id/base_line"
        app:layout_constraintTop_toTopOf="@id/tv_sn_key" />

    <!-- mac info -->
    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_mac_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="MAC"
        app:layout_constraintRight_toLeftOf="@id/base_line"
        app:layout_constraintTop_toBottomOf="@id/tv_sn_key" />

    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_mac_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00:00:00:00"
        app:layout_constraintLeft_toRightOf="@id/base_line"
        app:layout_constraintTop_toTopOf="@id/tv_mac_key" />

    <!-- cpu info -->
    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_cpu_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="CPU"
        app:layout_constraintRight_toLeftOf="@id/base_line"
        app:layout_constraintTop_toBottomOf="@id/tv_mac_key" />

    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_cpu_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxx"
        app:layout_constraintLeft_toRightOf="@id/base_line"
        app:layout_constraintTop_toTopOf="@id/tv_cpu_key" />

    <!-- gpu info -->
    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_gpu_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="GPU"
        app:layout_constraintRight_toLeftOf="@id/base_line"
        app:layout_constraintTop_toBottomOf="@id/tv_cpu_key" />

    <com.sunny.lib.view.SunnyTextView
        android:id="@+id/tv_gpu_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxx"
        app:layout_constraintLeft_toRightOf="@id/base_line"
        app:layout_constraintTop_toTopOf="@id/tv_gpu_key" />

    <com.sunny.lib.view.SunnyButton
        android:id="@+id/btn_device_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="获取设备信息"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
