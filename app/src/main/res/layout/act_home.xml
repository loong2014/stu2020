<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_page_bg">

    <com.sunny.family.view.SunnyTopBar
        android:id="@+id/mTopBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_h"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/mViewPager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layoutDirection="ltr"
        app:layout_constraintBottom_toTopOf="@+id/mBottomBar"
        app:layout_constraintTop_toBottomOf="@+id/mTopBar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mBottomBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mBottomBtn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/mBottomBtn2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mBottomBtn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/mBottomBtn1"
            app:layout_constraintRight_toLeftOf="@id/mBottomBtn3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mBottomBtn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/mBottomBtn2"
            app:layout_constraintRight_toLeftOf="@id/mBottomBtn4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mBottomBtn4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/mBottomBtn3"
            app:layout_constraintRight_toLeftOf="@id/mBottomBtn5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mBottomBtn5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/mBottomBtn4"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
