<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_page_bg">

    <!-- 标题栏 -->
    <com.sunny.family.view.SunnyTopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_h"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 标签栏 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bar">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tab_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="TabA"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tab_2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tab_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="TabB"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/tab_1"
            app:layout_constraintRight_toLeftOf="@+id/tab_3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tab_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="TabC"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/tab_2"
            app:layout_constraintRight_toLeftOf="@+id/tab_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tab_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="TabD"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/tab_3"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 下拉刷新布局 -->
    <com.sunny.family.layout.SunnySwipeToLoadLayout
        android:id="@+id/swipe_to_load_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_bar">

        <!-- 刷新模块 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/swipe_refresh_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/top_bg">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/refresh_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="释放刷新"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="vertical"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/first_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="列表一" />

                    <!-- 与刷新关联的RV -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/swipe_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- banner -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/top_bg" />

                    <!-- 筛选栏 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/filter_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/filter_all"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="2dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="全部"
                            android:textColor="@color/black"
                            app:layout_constraintHorizontal_chainStyle="spread"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/filter_sheng" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/filter_sheng"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="2dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="省"
                            android:textColor="@color/black"
                            app:layout_constraintLeft_toRightOf="@+id/filter_all"
                            app:layout_constraintRight_toLeftOf="@+id/filter_other" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/filter_other"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="其它"
                            android:textColor="@color/black"
                            app:layout_constraintLeft_toRightOf="@+id/filter_sheng"
                            app:layout_constraintRight_toRightOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <!-- 筛选列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.sunny.family.layout.SunnySwipeToLoadLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
