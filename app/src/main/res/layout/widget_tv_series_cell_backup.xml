<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/detail_widget_common_bg"
    android:clickable="true"
    android:duplicateParentState="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layerType="software">

    <RelativeLayout
        android:id="@+id/layout_focus_view"
        android:layout_width="94dp"
        android:layout_height="44dp">

        <LinearLayout
            android:layout_width="94dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_vertical_detail_tv_series_play_icon"
                android:layout_width="15.3dp"
                android:layout_height="14dp"
                android:background="@drawable/icon_series_history_play"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_vertical_detail_tv_series_number_text"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:ellipsize="end"
                android:gravity="center"
                android:layerType="software"
                android:padding="5dp"
                android:shadowColor="@color/black_40"
                android:shadowRadius="3"
                android:singleLine="true"
                android:textColor="#CCCCCC"
                android:textSize="24sp"
                tools:text="3" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_vertical_detail_tv_series_label_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</FrameLayout>