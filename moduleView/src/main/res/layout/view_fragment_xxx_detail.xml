<?xml version="1.0" encoding="utf-8"?>
<com.sunny.lib.ui.SunnyConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_page_bg">

    <com.sunny.lib.common.view.SunnyTopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_h"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:stl_clickable="true"
        app:stl_customTabTextLayoutId="@layout/smarttablelayout_custom_tap_detail_fragment"
        app:stl_customTabTextViewId="@+id/tab_content"
        app:stl_distributeEvenly="true"
        app:stl_dividerColor="@color/white_90"
        app:stl_dividerThickness="0.5dp"
        app:stl_indicatorColor="@color/colorRed"
        app:stl_indicatorCornerRadius="0dp"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="2dp"
        app:stl_indicatorWidth="20dp"
        app:stl_underlineColor="@color/white"
        app:stl_underlineThickness="0dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout" />

</com.sunny.lib.ui.SunnyConstraintLayout>
