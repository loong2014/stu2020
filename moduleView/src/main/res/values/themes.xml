<resources>

    <!-- https://blog.csdn.net/az44yao/article/details/112318500 -->
    <!-- 将AppCompat更改为MaterialComponents避免使用Material Design组件时造成闪退 -->
    <!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="ViewTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- ActionBar的背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- 状态栏背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- 许多控件在选中状态或获取焦点状态下使用这个颜色 -->
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ViewTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- 状态栏背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- 许多控件在选中状态或获取焦点状态下使用这个颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:typeface">serif</item>-->
        <item name="android:fontFamily">@font/ma_shan_zheng_regular</item>

    </style>

    <style name="XxxStyle" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- 状态栏背景色 -->
        <item name="colorPrimaryDark">@color/transparent</item>

        <!-- 许多控件在选中状态或获取焦点状态下使用这个颜色 -->
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 使用Toolbar时，必须使用该主题 -->
    <style name="ViewTheme.Trans" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>


    <!-- 使用Toolbar时，必须使用该主题 -->
    <style name="ViewTheme.StuToolBar" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- 设置为false,才能使用Toolbar -->
        <item name="windowActionBar">false</item>

        <!-- Caused by: java.lang.IllegalArgumentException:
        AppCompat does not support the current theme features: {
         windowActionBar: false, windowActionBarOverlay: false,
         android:windowIsFloating: false, windowActionModeOverlay:
         false, windowNoTitle: false } -->
        <item name="windowNoTitle">true</item>
    </style>
    <!--
   https://blog.csdn.net/lovingning/article/details/84892197
   -->
    <style name="view_SearchEditTextStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:hint">input key for search</item>
    </style>

</resources>