<resources>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">"National2-Regular"</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabMinWidth">150px</item>
        <item name="tabPaddingStart">20dp</item>
        <item name="tabPaddingEnd">20dp</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">#00ff00</item>
        <item name="tabIndicatorHeight">50dp</item>
        <item name="tabTextColor">#ff00ff</item>
        <item name="tabBackground">@null</item>
    </style>

</resources>
