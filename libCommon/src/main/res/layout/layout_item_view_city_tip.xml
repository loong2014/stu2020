<?xml version="1.0" encoding="utf-8"?>
<com.sunny.lib.common.view.SunnyConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_constraint"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/def_item_bg"
    android:orientation="vertical">

    <com.sunny.lib.ui.SunnyTextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</com.sunny.lib.common.view.SunnyConstraintLayout>
